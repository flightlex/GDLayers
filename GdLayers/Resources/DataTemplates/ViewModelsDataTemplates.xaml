<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pageViewModels="clr-namespace:GdLayers.Mvvm.ViewModels.Pages"
    xmlns:pageViews="clr-namespace:GdLayers.Mvvm.Views.Pages">

    <!--  Single Instances  -->
    <pageViews:LevelsView x:Key="LevelsViewInstance" />
    <pageViews:LayersView x:Key="LayersViewInstance" />

    <!--  Data Templates  -->
    <DataTemplate DataType="{x:Type pageViewModels:LevelsViewModel}">
        <ContentPresenter Content="{StaticResource LevelsViewInstance}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type pageViewModels:LayersViewModel}">
        <ContentPresenter Content="{StaticResource LayersViewInstance}" />
    </DataTemplate>

</ResourceDictionary>