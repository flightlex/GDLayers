<Grid
    x:Class="GdLayers.Mvvm.Views.DataTemplates.Windows.Pages.Layers.BuiltInLayerPresetDataTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:GdLayers.Models"
    d:DataContext="{d:DesignInstance Type=models:BuiltInLayerPresetModel}"
    d:DesignWidth="150"
    mc:Ignorable="d">

    <StackPanel>

        <Grid>

            <TextBlock
                HorizontalAlignment="Left"
                FontSize="14"
                Text="{Binding Title, FallbackValue=Title}" />

            <TextBlock
                HorizontalAlignment="Right"
                FontSize="12"
                Opacity="0.75"
                Foreground="{StaticResource WhiteBrush}"
                Text="{Binding LayerCount, StringFormat=({0} layers), FallbackValue=(69 layers)}" />

        </Grid>

        <TextBlock
            Margin="10,5,0,0"
            HorizontalAlignment="Left"
            FontSize="12"
            Foreground="{StaticResource WhiteGrayBrush}"
            Text="{Binding Description, FallbackValue='desciprtionnnnnnnnnnnnnnn'}"
            TextWrapping="Wrap" />

    </StackPanel>

</Grid>
